<Window x:Class="ProyectoSegundoParcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoSegundoParcial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" Text="Tipo de producto" VerticalAlignment="Top" Height="24" Width="102"/>
        <ComboBox x:Name="combotipoproducto" HorizontalAlignment="Left" Margin="112,10,0,0" VerticalAlignment="Top" Width="373" SelectionChanged="combotipoproducto_SelectionChanged">
            <ComboBoxItem>Bocina</ComboBoxItem>
            <ComboBoxItem>Audiculares</ComboBoxItem>
            <ComboBoxItem>Audifonos</ComboBoxItem>
            <ComboBoxItem>Bajos</ComboBoxItem>
            <ComboBoxItem>Amplificadores</ComboBoxItem>
            <ComboBoxItem>Microfonos</ComboBoxItem>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="10,-3,0,0" TextWrapping="Wrap" Text="Tienda Musical" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="botonagregar" Content="Agregar" HorizontalAlignment="Left" Margin="513,13,0,0" VerticalAlignment="Top" Width="105" Click="botonagregar_Click"/>
        <Grid x:Name="grindprincipal" HorizontalAlignment="Left" Height="368" Margin="10,42,0,0" VerticalAlignment="Top" Width="774"/>

    </Grid>
</Window>
